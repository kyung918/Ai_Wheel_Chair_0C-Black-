/* USER CODE BEGIN 1 */
void GetADCFlowProcess(){

	//adc Timer
   uint8_t icnt;
   
   if(adctim.adc_get[0]!=0)return;
   adctim.adc_get[0] = 10;
   
   for(icnt=0;icnt<4;icnt++){
      HAL_ADC_Start(&hadc1);
       HAL_ADC_PollForConversion(&hadc1,10);
       ADC_data[icnt]=HAL_ADC_GetValue(&hadc1);
   }
   HAL_ADC_Stop(&hadc1);
   
   vout[ 0]=(ADC_data[ 0]*3300/4096);
   vout[ 1]=(ADC_data[ 1]*3300/4096);
   vout[ 2]=(ADC_data[ 2]*3300/4096);
   vout[ 3]=(ADC_data[ 3]*3300/4096);
		CursorPosition(0,0);
    printf("ch1 = %d\r\n",ADC_data[ 0]);
    printf("Ch2 = %d\r\n",ADC_data[ 1]);
		printf("Ch3 = %d\r\n",ADC_data[ 2]);
    printf("Ch4 = %d\r\n",ADC_data[ 3]);
    /*printf("Cu2 = %d,\r\n",ADC_data[ 9]);
    printf("Cu1 = %d,\r\n",ADC_data[11]);*/
}



